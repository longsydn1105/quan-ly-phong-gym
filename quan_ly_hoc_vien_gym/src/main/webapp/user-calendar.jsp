                </div>
            </div>
            <!-- Cardio -->
            <div class="activity">
                <h4>Cardio</h4>
                <div class="classes">
                    <div class="class-card">
                        <h5 class="class-title">Phòng 301</h5>
                        <p class="class-detail">PT: Robert White</p>
                        <p class="class-detail">6:00 PM - 7:00 PM</p>
                        <p class="class-detail">12/12/2024</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>